---
import DiscussionCard from './DiscussionCard.astro';

const discussions = [
  {
    id: 1,
    title: '如何在日常生活中活出信仰？',
    preview: '在繁忙的工作和生活中，我们应该如何持守信仰，活出基督的样式...',
    answers: 12,
    views: 234,
    tags: ['生活见证', '信仰实践']
  },
  {
    id: 2,
    title: '分享：每日读经心得',
    preview: '通过每日读经，我对神的话语有了新的认识和理解...',
    answers: 8,
    views: 156,
    tags: ['读经分享', '灵修']
  },
  {
    id: 3,
    title: '关于教会服侍的思考',
    preview: '作为年轻的信徒，如何更好地参与教会服侍，发挥自己的恩赐...',
    answers: 15,
    views: 289,
    tags: ['教会服侍', '恩赐']
  }
];

const isLoggedIn = false; // 这里应该从实际的认证状态获取
---

<div class="max-w-4xl mx-auto">
  {isLoggedIn ? (
    <div class="grid gap-6">
      {discussions.map(discussion => (
        <DiscussionCard {...discussion} />
      ))}
    </div>
  ) : (
    <div class="bg-white rounded-2xl shadow-soft p-8 text-center">
      <div class="mb-6">
        <span class="text-4xl">🤝</span>
      </div>
      <h3 class="text-2xl font-semibold text-gray-900 mb-4">加入我们的讨论</h3>
      <p class="text-gray-600 mb-8">登录后可以参与圣徒交流，分享你的见证和感动</p>
      <button class="px-8 py-3 bg-primary text-white rounded-xl hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-all duration-300 hover-lift">
        立即登录
      </button>
    </div>
  )}
</div>