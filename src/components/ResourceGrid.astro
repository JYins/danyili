---
interface Resource {
  id: string;
  title: string;
  description: string;
  icon: string;
  type: 'public' | 'private';
  category: string;
  url: string;
}

const publicResources: Resource[] = [
  {
    id: 'sermons',
    title: '布道会视频',
    description: '观看最新布道会视频',
    icon: '🎥',
    type: 'public',
    category: 'video',
    url: '/sermons'
  },
  {
    id: 'beginner-teachings',
    title: '初心者话语视频',
    description: '适合初信者的基础教导',
    icon: '📺',
    type: 'public',
    category: 'video',
    url: '/teachings/beginner'
  },
  {
    id: 'life-teachings',
    title: '生活话语视频',
    description: '日常生活中的属灵教导',
    icon: '🌱',
    type: 'public',
    category: 'video',
    url: '/teachings/life'
  },
  {
    id: 'bible-letter',
    title: 'Bible Letter',
    description: '灵修图片与经文',
    icon: '📖',
    type: 'public',
    category: 'image',
    url: '/bible-letter'
  }
];

const privateResources: Resource[] = [
  {
    id: 'meditation',
    title: '话语默想视频',
    description: '深入的话语默想与解读',
    icon: '🎯',
    type: 'private',
    category: 'video',
    url: '/teachings/meditation'
  },
  {
    id: 'worship',
    title: '赞美歌曲',
    description: '诗歌视频、音频与歌谱',
    icon: '🎵',
    type: 'private',
    category: 'music',
    url: '/worship'
  },
  {
    id: 'books',
    title: '图书',
    description: '在线阅读属灵书籍',
    icon: '📚',
    type: 'private',
    category: 'book',
    url: '/books'
  },
  {
    id: 'church-info',
